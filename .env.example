# Environment Configuration
ENVIRONMENT=development

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your-model-bucket
GCS_MODEL_BLOB=model.json
GCS_ENCODER_BLOB=label_encoder.pkl  
GCS_METADATA_BLOB=metadata.json

# Google Cloud Service Account (for local development)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# API Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=app/data/model.json
ENCODER_PATH=app/data/label_encoder.pkl
METADATA_PATH=app/data/metadata.json

# Performance Settings
MAX_WORKERS=1
PREDICTION_TIMEOUT=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8081